{
  "baseSettings": {
    "transports": [
      {
        "name": "rsyslog",
        "enabled": true,
        "settings": {
          "host": "process.env.RSYSLOG_HOST",
          "port": "process.env.RSYSLOG_PORT",
          "hostname": "process.env.RSYSLOG_HOSTNAME",
          "facility": 0,
          "protocol": "U",
          "tag": "winston",
          "level": "info"
        }
      },
      {
        "name" : "hipchat",
        "enabled": false,
        "settings": {
          "token": "process.env.HIPCHAT_TOKEN",
          "room": "",
          "from": "log-server",
          "level": "info",
          "notify": false,
          "color": "yellow",
          "messageFormat": "html"
        }
      }
    ]
  },
  "groups": [
    {
      "name": "nohipchat",
      "transports": [
        {
          "name" : "hipchat",
          "enabled": false
        }
      ]
    },
    {
      "name": "angularApp",
      "transports": [
        {
          "name" : "rsyslog",
          "enabled": true,
          "settings": {
            "tag": "angularApp",
            "level" : "error"
          }
        },
        {
          "name": "hipchat",
          "enabled": true,
          "settings": {
            "token": "process.env.HIPCHAT_TOKEN",
            "room": "angular-app-room"
          }
        }
      ]
    }
  ]
}
